depends libXaw
depends libXft
depends libxkbfile
depends ncurses

optional_depends freetype2 \
                 "--enable-freetype" \
                 "--disable-freetype" \
                 "for TTF fonts support"

optional_depends pcre2 \
                 "--with-pcre2" "--without-pcre2" \
                 "for PCRE2 regular expressions support"

optional_depends luit \
                 "--enable-luit" "" \
                 "for unicode support"

optional_depends libutempter \
                 "--with-utempter" "" \
                 "for session logging in utmp and wtpm files" \
                 "y"
