      SOURCE_URL=https://gitlab.freedesktop.org/$MODULE/$MODULE/-/archive/$VERSION/
      SOURCE_VFY=sha256:7160c16c409c9ea4f7da9d91923ae0a92df7f3453a292bf684bed071acd7b4ff
