      SOURCE_URL=https://gitlab.freedesktop.org/$MODULE/$MODULE/-/archive/$VERSION/
      SOURCE_VFY=sha256:0429db1121ea514eda80038ca74d9ac866c32596e9eff14b2d9453a696e947d1
