      SOURCE_URL=https://gitlab.freedesktop.org/$MODULE/$MODULE/-/archive/$VERSION/
      SOURCE_VFY=sha256:da0ac450902a2aef29028bcab0bec26eb5e08b4c36ffc2925746d807794991b6
