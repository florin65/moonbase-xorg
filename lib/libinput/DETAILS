      SOURCE_URL=https://gitlab.freedesktop.org/$MODULE/$MODULE/-/archive/$VERSION/
      SOURCE_VFY=sha256:029f40aca33ff006ff28eb8b9359e5d7e9bb7462059f81ff16c471a3cefc3344
