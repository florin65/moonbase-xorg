          SOURCE=$MODULE-$VERSION.tar.xz
      SOURCE_URL=https://dri.freedesktop.org/libdrm/
      SOURCE_VFY=sha256:051aeb3e542a57621018ffc443fb088dd69b78eef0ce4808b604ce0feac9f47f
