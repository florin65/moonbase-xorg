      SOURCE_URL=https://dri.freedesktop.org/libdrm/
      SOURCE_VFY=sha256:00b07710bd09b35cd8d80eaf4f4497fe27f4becf467a9830f1f5e8324f8420ff
   MODULE_PREFIX=${X11R7_PREFIX:-/usr}
        WEB_SITE=http://dri.freedesktop.org
